{
  "name": "amakodomoshokudou.org.v2",
  "type": "module",
  "version": "1.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:es": "eslint 'src/**/*.{astro,ts,tsx}'",
    "lint:html": "markuplint 'src/**/*.{astro,html}'",
    "prettier": "exec prettier --write 'src/**/*.{astro,ts,tsx,css,html}'",
    "lint": "pnpm run lint:css && pnpm run lint:es && pnpm run lint:html && pnpm run prettier",
    "prepare": "pnpx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged"
  },
  "lint-staged": {
    "*.{astro,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{astro,html}": [
      "markuplint"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.0.5",
    "@vanilla-extract/css": "^1.13.0",
    "astro": "^4.2.1",
    "newt-client-js": "^3.2.7",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@markuplint/astro-parser": "^3.11.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vanilla-extract/vite-plugin": "^3.9.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.52.0",
    "eslint-plugin-astro": "^0.29.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "markuplint": "^3.14.0",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.1",
    "stylelint": "^15.11.0",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard": "^34.0.0"
  }
}
