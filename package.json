{
  "name": "amakodomoshokudou.org.v2",
  "type": "module",
  "version": "1.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "dev:mock": "astro dev --mode mock",
    "build:mock": "astro check && astro build --mode mock",
    "start": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "lint:html": "markuplint '_dist/**/*.html'",
    "format": "pnpm prettier --write 'src/**/*.{astro,ts,tsx,css,html}'",
    "lint:es": "oxlint",
    "lint": "pnpm run check && pnpm run lint:es && pnpm run lint:html",
    "vrt": "pnpm exec playwright test",
    "vrt:upgrade": "pnpm vrt --update-snapshots",
    "remove:dist": "rm -rf _dist"
  },
  "dependencies": {
    "@astrojs/sitemap": "3.4.2",
    "@fontsource-variable/noto-sans-jp": "^5.2.6",
    "astro": "5.12.8",
    "microcms-js-sdk": "^3.2.0",
    "sharp": "^0.34.3",
    "valibot": "1.1.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.2.0",
    "dotenv": "^17.2.1",
    "markuplint": "^4.12.0",
    "msw": "^2.10.4",
    "oxlint": "^1.9.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
