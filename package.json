{
  "name": "amakodomoshokudou.org.v2",
  "type": "module",
  "version": "1.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "dev:mock": "astro dev --mode mock",
    "build:mock": "astro check && astro build --mode mock",
    "start": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "lint:html": "markuplint --allow-warnings 'dist/**/*.html'",
    "format": "pnpm prettier --write 'src/**/*.{astro,ts,tsx,css,html}'",
    "lint:es": "oxlint",
    "lint": "pnpm run check && pnpm run lint:es && pnpm run lint:html",
    "vrt": "pnpm exec playwright test",
    "vrt:upgrade": "pnpm vrt --update-snapshots"
  },
  "dependencies": {
    "@astrojs/sitemap": "3.6.0",
    "@fontsource-variable/noto-sans-jp": "^5.2.9",
    "astro": "5.16.4",
    "microcms-js-sdk": "^3.2.0",
    "sharp": "^0.34.5",
    "valibot": "1.2.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^24.10.1",
    "dotenv": "^17.2.3",
    "markuplint": "^4.14.0",
    "msw": "^2.12.4",
    "oxlint": "^1.31.0",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
