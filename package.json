{
  "name": "amakodomoshokudou.org.v2",
  "type": "module",
  "version": "1.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build && rm -rf _dist/_mock",
    "dev:mock": "astro dev --mode mock",
    "build:mock": "astro check && astro build --mode mock",
    "start": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "lint:html": "markuplint 'src/**/*.{astro,html}'",
    "prettier": "exec prettier --write 'src/**/*.{astro,ts,tsx,css,html}'",
    "lint": "pnpm run check && pnpm biome lint && pnpm run lint:html",
    "vrt": "pnpm exec playwright test",
    "prepare": "pnpx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged"
  },
  "lint-staged": {
    "*.{astro,ts,tsx}": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/sitemap": "3.2.1",
    "@astrojs/tailwind": "^5.1.4",
    "@fontsource-variable/noto-sans-jp": "^5.1.1",
    "astro": "5.1.1",
    "newt-client-js": "^3.3.7",
    "sharp": "^0.33.5",
    "valibot": "1.0.0-beta.9"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@biomejs/biome": "1.9.4",
    "@markuplint/astro-parser": "^4.6.14",
    "@playwright/test": "^1.45.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@types/node": "^22.10.2",
    "autoprefixer": "^10.4.20",
    "markuplint": "^4.11.4",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2"
  }
}
