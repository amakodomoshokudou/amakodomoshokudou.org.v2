{
  "name": "amakodomoshokudou.org.v2",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint:css": "stylelint 'src/**/*.{css,astro}'",
    "lint:es": "eslint 'src/**/*.{astro,ts,tsx}'",
    "lint:html": "markuplint 'src/**/*.{astro,html}'",
    "prettier": "exec prettier --write 'src/**/*.{astro,ts,tsx,css,html}'",
    "lint": "pnpm run lint:css && pnpm run lint:es && pnpm run lint:html && pnpm run prettier",
    "prepare": "pnpx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged"
  },
  "lint-staged": {
    "*.{astro,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{astro,html}": [
      "markuplint"
    ],
    "*.{astro,css}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.0.0",
    "astro": "^3.2.0",
    "newt-client-js": "^3.2.7",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@markuplint/astro-parser": "^3.10.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.50.0",
    "eslint-plugin-astro": "^0.29.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "markuplint": "^3.13.0",
    "postcss-html": "^1.5.0",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "stylelint": "^15.10.3",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard": "^34.0.0"
  }
}
