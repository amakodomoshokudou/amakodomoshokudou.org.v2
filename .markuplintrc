{
  "extends": [
    "markuplint:recommended"
  ],
  "parser": {
    ".astro$": "@markuplint/astro-parser"
  },
  "pretenders": [
    {
      "selector": "Image",
      "as": "img"
    },
    {
      "selector": "DownloadLink",
      "as": "a"
    },
    {
      "selector": "ToSectionLink",
      "as": "a"
    },
    {
      "selector": "TextLink",
      "as": "a"
    },
    {
      "selector": "Heading",
      "as": "h2"
    },
    {
      "selector": "CopyButton",
      "as": "button"
    }
  ],
  "rules": {
    "character-reference": false
  },
  "nodeRules": [
    {
      "selector": "img",
      "rules": {
        "required-attr": false
      }
    }
  ]
}
